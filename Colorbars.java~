import java.awt.Color;
public class Colorbars {
    public static void main (String[] args) {
          int imageWidth = Integer.parseInt(args[1]);
          int imageHeight =(int)((3.0/4.0)*imageWidth);
          Picture image = new Picture(imageWidth,imageHeight);
          String brightness = (args[2]);
          if (imageWidth <= 0 || imageWidth % 16 != 0) {
              System.out.println("There is an error in the number of pixels presented");
              System.out.println("The amount of pixels need to be greater than 0 and a multiple of 16");
              System.exit;
          }
          int top = (int)((2.0/3.0)*imageHeight);
          int bottom = (int)((1.0/4.0)*imageHeight);
          int middle = top - bottom; 
          int topWidth = (int)(imageWidth/7.0);
          int middleWidth = topWidth;
          int bottomWidht = (int)(imageWidth/6.0);
          if 

              if (brightness.equals("bright")) {
              Color gray = new Color(255, 255, 255);
              Color yellow = new Color(255, 255, 0);
              Color cyan = new Color(0, 255, 255);
              Color green = new Color(0, 255, 0);
              Color magenta = new Color(255, 0, 255);
              Color red = new Color(255, 0, 0);
              Color blue = new Color(0, 0, 255);
              Color white = new Color(255, 255, 255);
              Color black = new Color(0, 0, 0);
              Color darkblue = new Color(0, 33, 76);
              Color darkpurple = new Color(50, 0, 106);
              }
              
              
              for (int x=0; x<imageWidth; x++) {
                  for (int y=0; y<top; y++) {
                      image.set(x,y,red);

              }
                  }    
          
          image.save(args[0]);
